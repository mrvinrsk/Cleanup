<Window x:Class="Cleanup.CleanWarning"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cleanup"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Are you sure?" Height="300" Width="600" FontFamily="Lato">
    <Grid>
        <Label Content="Are you sure?" HorizontalAlignment="Center" Margin="0,81,0,0" VerticalAlignment="Top" FontSize="28" FontWeight="Bold"/>
        <Label Content="When continuing, the selected paths will get cleared!" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Margin="0,123,0,0"/>
        <Button Padding="20,7,20,7" Content="Yes, continue" Margin="163,182,0,0" Background="#cc0000" BorderThickness="0,0,0,0" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Lato" FontWeight="Bold"/>
        <Button Padding="20,7,20,7" Content="No, cancel" Margin="326,182,0,0" Background="#e9e9e9" BorderThickness="0,0,0,0" Foreground="Black" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Lato" FontWeight="Bold"/>

    </Grid>
</Window>
